<% if !@friends.empty? %>
  <div class="row">
    <div class="col-9">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">Email</th>
            <th scope="col">Full name</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @friends.each do |friend| %>
            <tr>
              <th><%= friend.email %></th>
              <td><%= friend.full_name %></td>
              <td>
                <%= link_to "View profile", user_path(friend), class: "btn btn-sm btn-primary" %>
                <%= link_to "Unfollow", friendship_path(friend), method: :delete, class: 'btn btn-warning', data: {confirm: 'Are you sure?'} %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
