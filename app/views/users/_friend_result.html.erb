<div class="d-inline-block">
  <%= render 'layouts/messages' %>
</div>
<% if @friends %>
  <div class="card card-header d-inline-block mb-3">
    <% @friends.each do |friend| %>
      <div class="row p-1">
        <div class="col-12">
          <strong>Full Name: </strong> <%= friend.full_name %>
          <strong>Email: </strong> <%= friend.email %>
          <div class="d-inline-block align-right w-auto">
            <%= link_to "View profile", user_path(friend), class: "btn btn-sm btn-primary" %>
            <% if current_user.not_friends_with?(friend.id) %>
              <%= link_to "Follow", friendships_path(friend: friend), class: "btn btn-sm btn-success", method: :post %>
            <% else %>
              <span class="badge badge-secondary">
                Already followed
              </span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
